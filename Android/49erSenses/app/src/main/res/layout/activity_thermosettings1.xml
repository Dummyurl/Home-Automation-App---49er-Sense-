<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Thermostat settings for First Floor "
        android:textSize="20sp"
        android:textColor="#000000"
        />




    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Control Temperature:"
        android:textSize="20sp"
        android:textColor="#000000"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Mode "
        android:textSize="20sp"
        android:textColor="#000000"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Heat"
            android:textSize="18sp"
            android:textColor="#000000"
            android:onClick="OnHeatfirst"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:id="@+id/heatthermosetting1btn"
            />

        <Button
            android:id="@+id/coolthermosetting1btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Cool"
            android:onClick="OnCoolfirst"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="18sp" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OFF"
            android:textSize="18sp"
            android:onClick="OnOfffirst"
            android:layout_weight="1"
            android:textColor="#000000"
            android:id="@+id/modeoffthermosetting1btn"
            />

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Fan"
        android:textSize="20sp"
        android:textColor="#000000"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ON"
            android:textSize="18sp"
            android:layout_weight="1"
            android:onClick="OnFanonfirst"
            android:textColor="#000000"
            android:id="@+id/fanonthermosetting1btn"
            />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Auto"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="10dp"
            android:onClick="OnFanautofirst"
            android:layout_weight="1"
            android:id="@+id/autothermosetting1btn"
            />



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OFF"
            android:textSize="18sp"
            android:layout_weight="1"
            android:textColor="#000000"
            android:onClick="OnFanofffirst"
            android:id="@+id/fanoffthermosetting1btn"
            />



    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textSize="18sp"
        android:textColor="#000000"
        android:id="@+id/backthermosetting1btn"
        />


</LinearLayout>